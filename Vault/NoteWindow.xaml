<Window x:Class="Vault.NoteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vault"
        xmlns:cust="clr-namespace:Vault.CustomControls"
        mc:Ignorable="d"
        Title="Nota"
        Height="523"
        Width="402"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="{x:Null}"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded">
    <Border x:Name="WindowBorder"
            Background="{DynamicResource WindowBackground}"
            BorderBrush="{DynamicResource WindowBorderBrush}"
            BorderThickness="{DynamicResource WindowBorderThickness}"
            CornerRadius="{DynamicResource WindowCornerRadius}"
            SnapsToDevicePixels="True">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="32"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.Clip>
                <MultiBinding Converter="{StaticResource WindowClipConverter}">
                    <Binding Path="ActualWidth"
                         RelativeSource="{RelativeSource Self}"/>
                    <Binding Path="ActualHeight"
                         RelativeSource="{RelativeSource Self}"/>
                    <Binding Path="BorderThickness"
                         RelativeSource="{RelativeSource FindAncestor, AncestorType=Border}"/>
                    <Binding Path="CornerRadius"
                         RelativeSource="{RelativeSource FindAncestor, AncestorType=Border}"/>
                </MultiBinding>
            </Grid.Clip>
            <Grid x:Name="Toolbar"
                  Grid.Row="0">
                <cust:FullButton x:Name="CloseWindow"
                                 HorizontalAlignment="Right"
                                 Width="32"
                                 Height="32"
                                 Content="&#xE106;"
                                 FontFamily="Segoe MDL2 Assets"
                                 FontSize="10"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 BackgroundOnPressed="Red"
                                 BackgroundOnDisabled="Transparent"
                                 Click="CloseWindow_Click"/>
                <TextBlock HorizontalAlignment="Left"
                           Margin="10,0,10,0"
                           TextWrapping="NoWrap"
                           Text="{Binding Title, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                           VerticalAlignment="Center"
                           Foreground="White"/>
                <Grid x:Name="ToolbarMouseHandler"
                      Margin="0,0,50,0"
                      Background="Transparent"
                      MouseLeftButtonDown="ToolbarMouseHandler_MouseLeftButtonDown"/>
            </Grid>
            <Grid x:Name="ContentWindow"
                  Grid.Row="1">
                <cust:IconedTextBox x:Name="NoteTitle"
                                    VerticalAlignment="Top"
                                    Margin="0,25,0,0"
                                    Height="35"
                                    Width="350"
                                    VerticalContentAlignment="Center"
                                    Icon="Icons/ic_label.png"
                                    Hint="Titolo"/>
                <cust:IconedTextBox x:Name="NoteSubtitle"
                                    VerticalAlignment="Top"
                                    Margin="0,65,0,0"
                                    Height="35"
                                    Width="350"
                                    VerticalContentAlignment="Center"
                                    Icon="Icons/ic_info.png"
                                    Hint="Sottotitolo"/>
                <cust:IconedTextBox x:Name="NoteText"
                                    VerticalAlignment="Top"
                                    Margin="25,115,25,0"
                                    Height="260"
                                    Width="350"
                                    Icon="Icons/ic_notes.png"
                                    Hint="Testo"
                                    TextWrapping="Wrap"
                                    AcceptsReturn="True"
                                    MaxLines="8"
                                    MaxLength="420"/>
                <CheckBox x:Name="NoteRequestKey"
                          HorizontalAlignment="Left"
                          VerticalAlignment="Top"
                          Margin="54,390,0,0"
                          Content="Richiedi conferma password"
                          Foreground="White"/>
                <Grid x:Name="Buttons"
                      Width="160"
                      Height="34"
                      VerticalAlignment="Top"
                      Margin="0,430,10,0">
                    <cust:FullButton x:Name="Ok"
                                     Content="SALVA"
                                     HorizontalAlignment="Left"
                                     Width="55"
                                     Height="34"
                                     Click="Ok_Click"/>
                    <cust:FullButton x:Name="Cancel"
                                     Content="ANNULLA"
                                     HorizontalAlignment="Right"
                                     Width="70"
                                     Height="34"
                                     Click="Cancel_Click"/>
                </Grid>
                <cust:FullButton x:Name="Delete"
                                 HorizontalAlignment="Right"
                                 VerticalAlignment="Bottom"
                                 Margin="0,0,25,25"
                                 Width="34"
                                 Height="34"
                                 Content="&#xE74D;"
                                 FontFamily="Segoe MDL2 Assets"
                                 FontSize="16"
                                 Background="Red"
                                 BackgroundOnMouseOver="IndianRed"
                                 BackgroundOnPressed="DarkRed"
                                 BorderBrush="IndianRed"
                                 BorderBrushOnMouseOver="IndianRed"
                                 BorderBrushOnPressed="IndianRed"
                                 Click="Delete_Click"/>
            </Grid>
        </Grid>
    </Border>
</Window>
