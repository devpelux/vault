<Window x:Class="Vault.NoteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fc="clr-namespace:FullControls;assembly=FullControls"
        mc:Ignorable="d"
        Title="Nota"
        Height="573"
        Width="402"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="{x:Null}"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded">
    <Border x:Name="WindowBorder"
            Background="{DynamicResource WindowBackground}"
            BorderBrush="{DynamicResource WindowBorderBrush}"
            BorderThickness="{DynamicResource WindowBorderThickness}"
            CornerRadius="{DynamicResource WindowCornerRadius}"
            SnapsToDevicePixels="True">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="32"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.Clip>
                <MultiBinding Converter="{StaticResource EqualClipConverter}">
                    <Binding Path="ActualWidth"
                         RelativeSource="{RelativeSource Self}"/>
                    <Binding Path="ActualHeight"
                         RelativeSource="{RelativeSource Self}"/>
                    <Binding Path="BorderThickness"
                         RelativeSource="{RelativeSource FindAncestor, AncestorType=Border}"/>
                    <Binding Path="CornerRadius"
                         RelativeSource="{RelativeSource FindAncestor, AncestorType=Border}"/>
                </MultiBinding>
            </Grid.Clip>
            <Grid x:Name="Toolbar"
                  Grid.Row="0">
                <fc:FullButton x:Name="CloseWindow"
                               Style="{DynamicResource FullCloseButtonDark}"
                               HorizontalAlignment="Right"
                               Width="32"
                               Height="32"
                               Content="&#xE106;"
                               FontFamily="Segoe MDL2 Assets"
                               FontSize="10"
                               BorderThickness="0"
                               Click="CloseWindow_Click"/>
                <TextBlock HorizontalAlignment="Left"
                           Margin="10,0,10,0"
                           TextWrapping="NoWrap"
                           Text="{Binding Title, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                           VerticalAlignment="Center"
                           Foreground="White"/>
                <Grid x:Name="ToolbarMouseHandler"
                      Margin="0,0,50,0"
                      Background="Transparent"
                      MouseLeftButtonDown="ToolbarMouseHandler_MouseLeftButtonDown"/>
            </Grid>
            <Grid x:Name="ContentWindow"
                  Grid.Row="1">
                <fc:FullTextBox x:Name="NoteTitle"
                                Style="{DynamicResource FullTextBoxDark}"
                                VerticalAlignment="Top"
                                Margin="0,25,0,0"
                                Height="35"
                                Width="350"
                                VerticalContentAlignment="Center"
                                ShowIcon="True"
                                Icon="Icons/ic_label.png"
                                Hint="Titolo"/>
                <fc:FullTextBox x:Name="NoteSubtitle"
                                Style="{DynamicResource FullTextBoxDark}"
                                VerticalAlignment="Top"
                                Margin="0,65,0,0"
                                Height="35"
                                Width="350"
                                VerticalContentAlignment="Center"
                                ShowIcon="True"
                                Icon="Icons/ic_info.png"
                                Hint="Sottotitolo"/>
                <Grid VerticalAlignment="Top"
                      Margin="0,115,0,0"
                      Height="35"
                      Width="350">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="70"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0"
                               VerticalAlignment="Center"
                               TextWrapping="NoWrap"
                               Text="Gruppo"
                               Foreground="White"
                               FontSize="16"/>
                    <fc:FullComboBox x:Name="NoteCategory"
                                     Grid.Column="1"
                                     Style="{DynamicResource FullComboBoxDark}"/>
                </Grid>
                <fc:FullTextBox x:Name="NoteText"
                                Style="{DynamicResource FullTextBoxDark}"
                                VerticalAlignment="Top"
                                Margin="25,165,25,0"
                                Height="260"
                                Width="350"
                                ShowIcon="True"
                                Icon="Icons/ic_notes.png"
                                Hint="Testo"
                                TextWrapping="Wrap"
                                AcceptsReturn="True"
                                MaxLines="8"
                                MaxLength="420"/>
                <CheckBox x:Name="NoteRequestKey"
                          HorizontalAlignment="Left"
                          VerticalAlignment="Top"
                          Margin="54,440,0,0"
                          Content="Richiedi conferma password"
                          Foreground="White"/>
                <Grid x:Name="Buttons"
                      Width="160"
                      Height="34"
                      VerticalAlignment="Top"
                      Margin="0,480,10,0">
                    <fc:FullButton x:Name="Ok"
                                   Style="{DynamicResource FullButtonDark}"
                                   Content="SALVA"
                                   HorizontalAlignment="Left"
                                   Width="55"
                                   Height="34"
                                   Click="Ok_Click"/>
                    <fc:FullButton x:Name="Cancel"
                                   Style="{DynamicResource FullButtonDark}"
                                   Content="ANNULLA"
                                   HorizontalAlignment="Right"
                                   Width="70"
                                   Height="34"
                                   Click="Cancel_Click"/>
                </Grid>
                <fc:FullButton x:Name="Delete"
                               Style="{DynamicResource FullButtonDark}"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Bottom"
                               Margin="0,0,25,25"
                               Width="34"
                               Height="34"
                               Content="&#xE74D;"
                               FontFamily="Segoe MDL2 Assets"
                               FontSize="16"
                               Background="Red"
                               BackgroundOnMouseOver="IndianRed"
                               BackgroundOnPressed="DarkRed"
                               BorderBrush="IndianRed"
                               BorderBrushOnMouseOver="IndianRed"
                               BorderBrushOnPressed="IndianRed"
                               Click="Delete_Click"/>
            </Grid>
        </Grid>
    </Border>
</Window>
