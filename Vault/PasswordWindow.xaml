<Window x:Class="Vault.PasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vault"
        xmlns:cust="clr-namespace:CustomControls"
        mc:Ignorable="d"
        Title="Password"
        Height="441"
        Width="306"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="{x:Null}"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded">
    <Border Background="{DynamicResource WindowBackground}"
            BorderBrush="{DynamicResource WindowBorderBrush}"
            BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="32"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid x:Name="Toolbar"
                  Grid.Row="0">
                <cust:FullButton x:Name="CloseWindow"
                                 HorizontalAlignment="Right"
                                 Width="32"
                                 Height="32"
                                 Content="&#xE106;"
                                 FontFamily="Segoe MDL2 Assets"
                                 FontSize="10"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 BackgroundOnPressed="Red"
                                 BackgroundOnDisabled="Transparent"
                                 Click="CloseWindow_Click"/>
                <TextBlock HorizontalAlignment="Left"
                           Margin="10,0,10,0"
                           TextWrapping="NoWrap"
                           Text="{Binding Title,RelativeSource={RelativeSource FindAncestor,AncestorType=Window}}"
                           VerticalAlignment="Center"
                           Foreground="White"/>
                <Grid x:Name="ToolbarMouseHandler"
                      Margin="0,0,50,0"
                      Background="Transparent"
                      MouseLeftButtonDown="ToolbarMouseHandler_MouseLeftButtonDown"/>
            </Grid>
            <Grid x:Name="ContentWindow"
                  Grid.Row="1">
                <cust:IconedTextBox x:Name="Label"
                                    HorizontalAlignment="Left"
                                    Height="35"
                                    Margin="25,25,0,0"
                                    TextWrapping="Wrap"
                                    VerticalAlignment="Top"
                                    VerticalContentAlignment="Center"
                                    Width="250"
                                    Icon="Icons/ic_label.png"
                                    Hint="Nome"/>
                <cust:IconedTextBox x:Name="Website"
                                    HorizontalAlignment="Left"
                                    Height="35" 
                                    Margin="25,65,0,0"
                                    TextWrapping="Wrap"
                                    VerticalAlignment="Top"
                                    VerticalContentAlignment="Center"
                                    Width="250"
                                    Icon="Icons/ic_world.png"
                                    Hint="URL"/>
                <cust:IconedTextBox x:Name="Username"
                                    HorizontalAlignment="Left"
                                    Height="35"
                                    Margin="25,128,0,0"
                                    TextWrapping="Wrap"
                                    VerticalAlignment="Top"
                                    VerticalContentAlignment="Center"
                                    Width="250"
                                    Icon="Icons/ic_user.png"
                                    Hint="Username"/>
                <cust:IconedPasswordBox x:Name="Password"
                                    HorizontalAlignment="Left"
                                    Height="35"
                                    Margin="25,168,0,0"
                                    VerticalAlignment="Top"
                                    VerticalContentAlignment="Center"
                                    Width="250"
                                    Icon="Icons/ic_lock.png"
                                    Hint="Password"/>
                <cust:IconedTextBox x:Name="Details"
                                    HorizontalAlignment="Left"
                                    Height="94"
                                    Margin="25,231,0,0"
                                    TextWrapping="Wrap"
                                    VerticalAlignment="Top"
                                    VerticalContentAlignment="Center"
                                    Width="250"
                                    Icon="Icons/ic_notes.png"
                                    Hint="Note"/>
                <cust:FullButton x:Name="Ok"
                                 Content="SALVA"
                                 HorizontalAlignment="Left"
                                 Margin="54,349,0,0"
                                 VerticalAlignment="Top"
                                 Width="55"
                                 Height="34"
                                 Click="Ok_Click"/>
                <cust:FullButton x:Name="Cancel"
                                 Content="ANNULLA"
                                 HorizontalAlignment="Left"
                                 Margin="133,349,0,0"
                                 VerticalAlignment="Top"
                                 Width="70"
                                 Height="34"
                                 Click="Cancel_Click"/>
            </Grid>
        </Grid>
    </Border>
</Window>
