<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:tb="http://www.hardcodet.net/taskbar"
                    xmlns:controls="clr-namespace:Vault.Controls">

    <tb:TaskbarIcon x:Key="TrayIcon"
                    ToolTipText="{Binding ActualToolTipText}"
                    IconSource="{Binding ActualIcon}"
                    MenuActivation="RightClick"
                    PopupActivation="DoubleClick"
                    DoubleClickCommand="{Binding TrayActionShow}"
                    ContextMenu="{Binding ActualContextMenu}">
        <tb:TaskbarIcon.DataContext>
            <controls:TrayIconViewModel LockedIcon="/Icons/VaultTrayIconWhite.ico"
                                    UnlockedIcon="/Icons/VaultTrayIcon.ico"
                                    LockedContextMenu="{StaticResource TrayLockedContextMenu}"
                                    UnlockedContextMenu="{StaticResource TrayUnlockedContextMenu}"
                                    LockedToolTipText="Vault - Bloccato"
                                    UnlockedToolTipText="Vault - Sbloccato"
                                    VaultStatus="Undefined" />
        </tb:TaskbarIcon.DataContext>
    </tb:TaskbarIcon>

</ResourceDictionary>
