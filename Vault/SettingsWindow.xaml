<fc:AvalonWindow x:Class="Vault.SettingsWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:fc="http://devpelux.github.io/fullcontrols"
                 mc:Ignorable="d"
                 Style="{StaticResource DarkAvalonWindow}"
                 TitleMargin="16,0,0,0"
                 Title="Impostazioni"
                 SizeToContent="Height"
                 Width="300"
                 WindowStartupLocation="CenterScreen"
                 ResizeMode="NoResize"
                 Loaded="Window_Loaded"
                 Closed="Window_Closed">

    <Grid VerticalAlignment="Top"
          Margin="24">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <fc:CheckBoxPlus x:Name="StartOnStartup"
                         Style="{StaticResource DarkCheckBoxPlus}"
                         Grid.Row="0"
                         HorizontalAlignment="Left"
                         Margin="0"
                         Height="15"
                         Content="Avvia all'avvio di windows"
                         Checked="StartOnStartup_Checked"
                         Unchecked="StartOnStartup_Unchecked" />

        <TextBlock Grid.Row="1"
                   HorizontalAlignment="Left"
                   Margin="18,2,0,0"
                   TextWrapping="Wrap"
                   Text="L'applicazione verrà avviata subito dopo l'avvio di Windows."
                   Foreground="Gray" />

        <fc:CheckBoxPlus x:Name="StartHided"
                         Style="{StaticResource DarkCheckBoxPlus}"
                         Grid.Row="2"
                         HorizontalAlignment="Left"
                         Margin="0,16,0,0"
                         Height="15"
                         Content="Avvia nascosto"
                         Checked="StartHided_Checked"
                         Unchecked="StartHided_Unchecked" />

        <TextBlock Grid.Row="3"
                   HorizontalAlignment="Left"
                   Margin="18,2,0,0"
                   TextWrapping="Wrap"
                   Text="L'applicazione verrà avviata nascosta nella tray."
                   Foreground="Gray" />

        <fc:CheckBoxPlus x:Name="ExitExplicit"
                         Style="{StaticResource DarkCheckBoxPlus}"
                         Grid.Row="4"
                         HorizontalAlignment="Left"
                         Margin="0,16,0,0"
                         Height="15"
                         Content="Nascondi alla chiusura"
                         Checked="ExitExplicit_Checked"
                         Unchecked="ExitExplicit_Unchecked" />

        <TextBlock Grid.Row="5"
                   HorizontalAlignment="Left"
                   Margin="18,2,0,0"
                   TextWrapping="Wrap"
                   Text="L'applicazione verrà nascosta senza chiuderla se non ci sono finestre aperte."
                   Foreground="Gray" />

        <Grid Grid.Row="6"
              HorizontalAlignment="Right"
              Margin="0,24,0,0">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       HorizontalAlignment="Left"
                       Text="Vault"
                       Foreground="Gray" />

            <TextBlock x:Name="VersionCode"
                       Grid.Column="1"
                       HorizontalAlignment="Left"
                       Margin="8,0,0,0"
                       Text="N/A"
                       Foreground="Gray" />
        </Grid>
    </Grid>
</fc:AvalonWindow>
