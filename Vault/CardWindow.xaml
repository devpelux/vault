<Window x:Class="Vault.CardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fc="clr-namespace:FullControls;assembly=FullControls"
        mc:Ignorable="d"
        Title="Carta"
        Height="633"
        Width="312"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="{x:Null}"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded">
    <Border x:Name="WindowBorder"
            Background="{DynamicResource WindowBackground}"
            BorderBrush="{DynamicResource WindowBorderBrush}"
            BorderThickness="{DynamicResource WindowBorderThickness}"
            CornerRadius="{DynamicResource WindowCornerRadius}"
            SnapsToDevicePixels="True">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="32"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.Clip>
                <MultiBinding Converter="{StaticResource EqualClipConverter}">
                    <Binding Path="ActualWidth"
                         RelativeSource="{RelativeSource Self}"/>
                    <Binding Path="ActualHeight"
                         RelativeSource="{RelativeSource Self}"/>
                    <Binding Path="BorderThickness"
                         RelativeSource="{RelativeSource FindAncestor, AncestorType=Border}"/>
                    <Binding Path="CornerRadius"
                         RelativeSource="{RelativeSource FindAncestor, AncestorType=Border}"/>
                </MultiBinding>
            </Grid.Clip>
            <Grid x:Name="Toolbar"
                  Grid.Row="0">
                <fc:EButton x:Name="CloseWindow"
                               Style="{DynamicResource ECloseButtonDark}"
                               HorizontalAlignment="Right"
                               Width="32"
                               Height="32"
                               Content="&#xE106;"
                               FontFamily="Segoe MDL2 Assets"
                               FontSize="10"
                               BorderThickness="0"
                               Click="CloseWindow_Click"/>
                <TextBlock HorizontalAlignment="Left"
                           Margin="10,0,10,0"
                           TextWrapping="NoWrap"
                           Text="{Binding Title, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                           VerticalAlignment="Center"
                           Foreground="White"/>
                <Grid x:Name="ToolbarMouseHandler"
                      Margin="0,0,50,0"
                      Background="Transparent"
                      MouseLeftButtonDown="ToolbarMouseHandler_MouseLeftButtonDown"/>
            </Grid>
            <Grid x:Name="ContentWindow"
                  Grid.Row="1">
                <fc:ETextBox x:Name="CardLabel"
                                Style="{DynamicResource ETextBoxDark}"
                                VerticalAlignment="Top"
                                Margin="0,25,0,0"
                                Height="35"
                                Width="260"
                                VerticalContentAlignment="Center"
                                Icon="Icons/ic_label.png"
                                Hint="Nome"/>
                <fc:ETextBox x:Name="CardType"
                                Style="{DynamicResource ETextBoxDark}"
                                VerticalAlignment="Top"
                                Margin="0,65,0,0"
                                Height="35"
                                Width="260"
                                VerticalContentAlignment="Center"
                                EnableCopyButton="True"
                                Icon="Icons/ic_bank.png"
                                Hint="Tipo"/>
                <fc:ETextBox x:Name="CardOwner"
                                Style="{DynamicResource ETextBoxDark}"
                                VerticalAlignment="Top"
                                Margin="0,115,0,0"
                                Height="35"
                                Width="260"
                                VerticalContentAlignment="Center"
                                EnableCopyButton="True"
                                Icon="Icons/ic_user.png"
                                Hint="Nome sulla carta"/>
                <fc:ETextBox x:Name="CardNumber"
                                Style="{DynamicResource ETextBoxDark}"
                                VerticalAlignment="Top"
                                HorizontalAlignment="Left"
                                Margin="25,155,0,0"
                                Height="35"
                                Width="185"
                                VerticalContentAlignment="Center"
                                EnableCopyButton="True"
                                Icon="Icons/ic_card.png"
                                Hint="Numero"
                                MaxLength="16"/>
                <fc:ETextBox x:Name="CardSecureCode"
                                Style="{DynamicResource ETextBoxDark}"
                                VerticalAlignment="Top"
                                HorizontalAlignment="Left"
                                Margin="220,155,0,0"
                                Height="35"
                                Width="65"
                                VerticalContentAlignment="Center"
                                EnableCopyButton="True"
                                Icon="Icons/ic_label.png"
                                Hint="CVV"
                                MaxLength="3"/>
                <fc:ETextBox x:Name="CardExpiration"
                                Style="{DynamicResource ETextBoxDark}"
                                VerticalAlignment="Top"
                                Margin="25,195,25,0"
                                Height="35"
                                Width="260"
                                VerticalContentAlignment="Center"
                                EnableCopyButton="True"
                                Icon="Icons/ic_Hourglass.png"
                                Hint="Scadenza"/>
                <Grid VerticalAlignment="Top"
                      Margin="0,245,0,0"
                      Height="35"
                      Width="260">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="70"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0"
                               VerticalAlignment="Center"
                               TextWrapping="NoWrap"
                               Text="Gruppo"
                               Foreground="White"
                               FontSize="16"/>
                    <fc:EComboBox x:Name="CardCategory"
                                     Grid.Column="1"
                                     Style="{DynamicResource EComboBoxDark}"/>
                </Grid>
                <fc:ETextBox x:Name="CardDescription"
                                Style="{DynamicResource ETextBoxDark}"
                                VerticalAlignment="Top"
                                Margin="0,295,0,0"
                                Height="45"
                                Width="260"
                                VerticalContentAlignment="Center"
                                Icon="Icons/ic_info.png"
                                Hint="Dettagli"
                                TextWrapping="Wrap"
                                MaxLines="2"
                                MaxLength="64"/>
                <fc:ETextBox x:Name="CardNote"
                                Style="{DynamicResource ETextBoxDark}"
                                VerticalAlignment="Top"
                                Margin="0,345,0,0"
                                Height="140"
                                Width="260"
                                Icon="Icons/ic_notes.png"
                                Hint="Note"
                                TextWrapping="Wrap"
                                AcceptsReturn="True"
                                MaxLines="8"
                                MaxLength="420"/>
                <CheckBox x:Name="CardRequestKey"
                          HorizontalAlignment="Left"
                          VerticalAlignment="Top"
                          Margin="54,500,0,0"
                          Content="Richiedi conferma password"
                          Foreground="White"/>
                <Grid x:Name="Buttons"
                      Width="160"
                      Height="34"
                      VerticalAlignment="Top"
                      Margin="0,540,10,0">
                    <fc:EButton x:Name="Ok"
                                   Style="{DynamicResource EButtonDark}"
                                   Content="SALVA"
                                   HorizontalAlignment="Left"
                                   Width="55"
                                   Height="34"
                                   Click="Ok_Click"/>
                    <fc:EButton x:Name="Cancel"
                                   Style="{DynamicResource EButtonDark}"
                                   Content="ANNULLA"
                                   HorizontalAlignment="Right"
                                   Width="70"
                                   Height="34"
                                   Click="Cancel_Click"/>
                </Grid>
                <fc:EButton x:Name="Delete"
                               Style="{DynamicResource EButtonDark}"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Bottom"
                               Margin="0,0,25,25"
                               Width="34"
                               Height="34"
                               Content="&#xE74D;"
                               FontFamily="Segoe MDL2 Assets"
                               FontSize="16"
                               Background="Red"
                               BackgroundOnMouseOver="IndianRed"
                               BackgroundOnPressed="DarkRed"
                               BorderBrush="IndianRed"
                               BorderBrushOnMouseOver="IndianRed"
                               BorderBrushOnPressed="IndianRed"
                               Click="Delete_Click"/>
            </Grid>
        </Grid>
    </Border>
</Window>
