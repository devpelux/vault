<fc:AvalonWindow x:Class="Vault.CardWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:fc="http://devpelux.github.io/fullcontrols"
                 xmlns:core="clr-namespace:Vault.Core"
                 mc:Ignorable="d"
                 Style="{StaticResource DarkAvalonWindow}"
                 TitleMargin="16,0,0,0"
                 Title="Carta"
                 Height="644"
                 Width="312"
                 WindowStartupLocation="CenterScreen"
                 ResizeMode="NoResize"
                 Loaded="Window_Loaded">
    <Grid>
        <fc:TextBoxPlus x:Name="CardLabel"
                        Style="{StaticResource DarkTextBoxPlus}"
                        ContextMenu="{StaticResource FieldContextMenu}"
                        VerticalAlignment="Top"
                        Margin="0,25,0,0"
                        Height="35"
                        Width="260"
                        VerticalContentAlignment="Center"
                        Icon="Icons/ic_label.png"
                        LabelPlacement="Left"
                        LabelMargin="0,0,5,0"
                        LabelMaxHeight="24"
                        Hint="Nome">
            <fc:TextBoxPlus.CommandBindings>
                <CommandBinding Command="core:VaultCommands.CopyValue"
                                CanExecute="CopyValue_CanExecute"
                                Executed="CopyValue_Executed"/>
                <CommandBinding Command="core:VaultCommands.ReplaceValue"
                                CanExecute="ReplaceValue_CanExecute"
                                Executed="ReplaceValue_Executed"/>
            </fc:TextBoxPlus.CommandBindings>
        </fc:TextBoxPlus>
        <fc:TextBoxPlus x:Name="CardType"
                        Style="{StaticResource DarkTextBoxPlus}"
                        ContextMenu="{StaticResource FieldContextMenu}"
                        VerticalAlignment="Top"
                        Margin="0,65,0,0"
                        Height="35"
                        Width="260"
                        VerticalContentAlignment="Center"
                        Icon="Icons/ic_bank.png"
                        LabelPlacement="Left"
                        LabelMargin="0,0,5,0"
                        LabelMaxHeight="24"
                        Hint="Tipo">
            <fc:TextBoxPlus.CommandBindings>
                <CommandBinding Command="core:VaultCommands.CopyValue"
                                CanExecute="CopyValue_CanExecute"
                                Executed="CopyValue_Executed"/>
                <CommandBinding Command="core:VaultCommands.ReplaceValue"
                                CanExecute="ReplaceValue_CanExecute"
                                Executed="ReplaceValue_Executed"/>
            </fc:TextBoxPlus.CommandBindings>
        </fc:TextBoxPlus>
        <fc:TextBoxPlus x:Name="CardOwner"
                        Style="{StaticResource DarkTextBoxPlus}"
                        ContextMenu="{StaticResource FieldContextMenu}"
                        VerticalAlignment="Top"
                        Margin="0,115,0,0"
                        Height="35"
                        Width="260"
                        VerticalContentAlignment="Center"
                        Icon="Icons/ic_user.png"
                        LabelPlacement="Left"
                        LabelMargin="0,0,5,0"
                        LabelMaxHeight="24"
                        Hint="Nome sulla carta">
            <fc:TextBoxPlus.CommandBindings>
                <CommandBinding Command="core:VaultCommands.CopyValue"
                                CanExecute="CopyValue_CanExecute"
                                Executed="CopyValue_Executed"/>
                <CommandBinding Command="core:VaultCommands.ReplaceValue"
                                CanExecute="ReplaceValue_CanExecute"
                                Executed="ReplaceValue_Executed"/>
            </fc:TextBoxPlus.CommandBindings>
        </fc:TextBoxPlus>
        <Grid VerticalAlignment="Top"
              Margin="0,155,0,0"
              Height="35"
              Width="260">
            <fc:TextBoxPlus x:Name="CardNumber"
                            Style="{StaticResource DarkTextBoxPlus}"
                            ContextMenu="{StaticResource FieldContextMenu}"
                            HorizontalAlignment="Left"
                            Width="175"
                            VerticalContentAlignment="Center"
                            Icon="Icons/ic_card.png"
                            LabelPlacement="Left"
                            LabelMargin="0,0,5,0"
                            LabelMaxHeight="24"
                            Hint="Numero"
                            MaxLength="16">
                <fc:TextBoxPlus.CommandBindings>
                    <CommandBinding Command="core:VaultCommands.CopyValue"
                                    CanExecute="CopyValue_CanExecute"
                                    Executed="CopyValue_Executed"/>
                    <CommandBinding Command="core:VaultCommands.ReplaceValue"
                                    CanExecute="ReplaceValue_CanExecute"
                                    Executed="ReplaceValue_Executed"/>
                </fc:TextBoxPlus.CommandBindings>
            </fc:TextBoxPlus>
            <fc:TextBoxPlus x:Name="CardSecureCode"
                            Style="{StaticResource DarkTextBoxPlus}"
                            ContextMenu="{StaticResource FieldContextMenu}"
                            HorizontalAlignment="Right"
                            Width="65"
                            VerticalContentAlignment="Center"
                            Hint="CVV"
                            MaxLength="3">
                <fc:TextBoxPlus.CommandBindings>
                    <CommandBinding Command="core:VaultCommands.CopyValue"
                                    CanExecute="CopyValue_CanExecute"
                                    Executed="CopyValue_Executed"/>
                    <CommandBinding Command="core:VaultCommands.ReplaceValue"
                                    CanExecute="ReplaceValue_CanExecute"
                                    Executed="ReplaceValue_Executed"/>
                </fc:TextBoxPlus.CommandBindings>
            </fc:TextBoxPlus>
        </Grid>

        <fc:TextBoxPlus x:Name="CardExpiration"
                        Style="{StaticResource DarkTextBoxPlus}"
                        ContextMenu="{StaticResource FieldContextMenu}"
                        VerticalAlignment="Top"
                        Margin="0,195,0,0"
                        Height="35"
                        Width="260"
                        VerticalContentAlignment="Center"
                        Icon="Icons/ic_Hourglass.png"
                        LabelPlacement="Left"
                        LabelMargin="0,0,5,0"
                        LabelMaxHeight="24"
                        Hint="Scadenza">
            <fc:TextBoxPlus.CommandBindings>
                <CommandBinding Command="core:VaultCommands.CopyValue"
                                CanExecute="CopyValue_CanExecute"
                                Executed="CopyValue_Executed"/>
                <CommandBinding Command="core:VaultCommands.ReplaceValue"
                                CanExecute="ReplaceValue_CanExecute"
                                Executed="ReplaceValue_Executed"/>
            </fc:TextBoxPlus.CommandBindings>
        </fc:TextBoxPlus>
        <Grid VerticalAlignment="Top"
              Margin="0,245,0,0"
              Height="35"
              Width="260">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="70"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0"
                       VerticalAlignment="Center"
                       TextWrapping="NoWrap"
                       Text="Gruppo"
                       Foreground="White"
                       FontSize="16"/>
            <fc:ComboBoxPlus x:Name="CardCategory"
                             Grid.Column="1"
                             Style="{StaticResource DarkComboBoxPlus}"/>
        </Grid>
        <fc:TextBoxPlus x:Name="CardDescription"
                        Style="{StaticResource DarkTextBoxPlus}"
                        VerticalAlignment="Top"
                        Margin="0,295,0,0"
                        Height="45"
                        Width="260"
                        VerticalContentAlignment="Center"
                        Icon="Icons/ic_info.png"
                        LabelPlacement="Left"
                        LabelMargin="0,0,5,0"
                        LabelMaxHeight="24"
                        Hint="Dettagli"
                        TextWrapping="Wrap"
                        MaxLines="2"
                        MaxLength="64"/>
        <fc:TextBoxPlus x:Name="CardNote"
                        Style="{StaticResource DarkTextBoxPlus}"
                        VerticalAlignment="Top"
                        Margin="0,345,0,0"
                        Height="140"
                        Width="260"
                        Label="Note"
                        VerticalContentAlignment="Top"
                        TextWrapping="Wrap"
                        AcceptsReturn="True"
                        MaxLines="8"
                        MaxLength="420"/>
        <fc:CheckBoxPlus x:Name="CardRequestKey"
                         Style="{StaticResource DarkCheckBoxPlus}"
                         HorizontalAlignment="Left"
                         VerticalAlignment="Top"
                         Margin="54,500,0,0"
                         Content="Richiedi conferma password"
                         Foreground="White"/>
        <Grid x:Name="Buttons"
              Height="34"
              HorizontalAlignment="Right"
              VerticalAlignment="Bottom"
              Margin="0,0,25,25">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <fc:ButtonPlus x:Name="Ok"
                           Grid.Column="0"
                           Style="{StaticResource DarkButtonPlus}"
                           Content="SALVA"
                           Width="55"
                           Click="Ok_Click"/>
            <fc:ButtonPlus x:Name="Cancel"
                           Grid.Column="1"
                           Style="{StaticResource DarkButtonPlus}"
                           Content="ANNULLA"
                           Width="70"
                           Margin="20,0,0,0"
                           Click="Cancel_Click"/>
            <fc:ButtonPlus x:Name="Delete"
                           Grid.Column="2"
                           Style="{StaticResource DarkButtonPlus}"
                           Content="&#xE74D;"
                           Width="34"
                           Margin="30,0,0,0"
                           FontFamily="Segoe MDL2 Assets"
                           FontSize="16"
                           Click="Delete_Click"/>
        </Grid>

    </Grid>
</fc:AvalonWindow>
