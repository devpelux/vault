<Window x:Class="Vault.Home"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vault"
        mc:Ignorable="d"
        Title="MainWindow" Height="412" Width="514" AllowsTransparency="True" WindowStyle="None" Background="{x:Null}" WindowStartupLocation="CenterScreen">
    <Border CornerRadius="5" Background="{DynamicResource WindowBackground}" BorderBrush="CornflowerBlue" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="32"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid x:Name="Toolbar" Grid.Row="0">
                <local:VaultButton x:Name="CloseWindow" Content="X" HorizontalAlignment="Right" Margin="0,0,2,0" Width="28" Height="28" Click="CloseWindow_Click"/>
                <TextBlock HorizontalAlignment="Left" Margin="10,0,10,0" TextWrapping="NoWrap" Text="MainWindow" VerticalAlignment="Center" Foreground="White"/>
                <Grid x:Name="ToolbarMouseHandler" Margin="0,0,50,0" Background="Transparent" MouseLeftButtonDown="ToolbarMouseHandler_MouseLeftButtonDown"/>
            </Grid>
            <Grid x:Name="ContentWindow" Grid.Row="1">
                <local:VaultButton x:Name="NewElement" Content="Nuovo" HorizontalAlignment="Left" Margin="39,128,0,0" VerticalAlignment="Top" Width="65" Height="37" Click="NewElement_Click"/>
                <local:VaultButton x:Name="Refresh" Content="Aggiorna" HorizontalAlignment="Left" Margin="39,86,0,0" VerticalAlignment="Top" Width="65" Height="37" Click="Refresh_Click"/>
                <local:ItemsContainer x:Name="Container" HorizontalAlignment="Left" Margin="167,29,0,0" VerticalAlignment="Top" Height="316" Width="298"/>
            </Grid>
        </Grid>
    </Border>
</Window>
